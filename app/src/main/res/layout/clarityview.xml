<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actual Read Level:"
        android:id="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Target Read Level:"
        android:id="@+id/textView7"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Distance:"
        android:id="@+id/textView9"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/actualReadLevel"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/targetReadLevel"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/targetReadLevel"
        android:padding="5dp"
        android:layout_toStartOf="@+id/hammingDistance"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/hammingDistance"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reading levels are based of the Flesh-Kincaid reading level formula. The values represent the approximate grade. Values above 12 indicate university. Edit Distance is the difference between the voice input ant the typed speech using the levenshtein algorithm."
        android:id="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>