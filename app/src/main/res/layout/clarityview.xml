<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actual Read Level:"
        android:id="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Target Read Level:"
        android:id="@+id/textView7"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actual Words/Minute:"
        android:id="@+id/textView6"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Target Words/Minute:"
        android:id="@+id/textView8"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hamming Distance:"
        android:id="@+id/textView9"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:padding="5dp"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/actualReadLevel"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/targetReadLevel"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/targetReadLevel"
        android:layout_above="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/actualWordsMinute"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/targetReadLevel"
        android:padding="5dp"
        android:layout_above="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/targetWordsMinute"
        android:padding="5dp"
        android:layout_above="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/hammingDistance"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:padding="5dp" />

</RelativeLayout>